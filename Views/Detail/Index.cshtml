@model  List<Demo.Models.TeamModel>
<script src="~/scripts/jquery-1.12.4.min.js"></script>
<script src="~/scripts/Grid/jquery.dataTables.min.js"></script>
<script src="~/scripts/Grid/jszip.min.js"></script>
<script src="~/scripts/Grid/dataTables.buttons.min.js"></script>
<script src="~/scripts/Grid/buttons.html5.min.js"></script>
<script src="~/scripts/Grid/jquery-ui.min.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

@if (Model.Count > 0)
{
    <br />

    <br />



    <table id="tblGrid">
        <thead>
            <tr>                
                <th>Name</th>                
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.Name </td>                   
                </tr>

            }

        </tbody>
    </table>

}
<script>


    $(document).ready(function () {
       gridDataTableView("Grid Example.xls");
    });

    gridDataTableView = function (fname) {
        $('#tblGrid').dataTable({
            "bFilter": true,
            "bLengthChange": false, "bPaginate": true, "bInfo": true,
            dom: 'Bfrtip',
            "order": [[0, 'desc'], [1, 'desc']],
            buttons: [{ extend: 'excelHtml5', text: 'Export to Excel', className: 'link_button', title: fname }]
        });
    }
</script>