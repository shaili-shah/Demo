@model Demo.Models.EducationDetailModel
@{
    Layout = null;
}

<style>
    .set-table {
        margin-top: 20px;
        padding-top: 20px;
        padding-left: 20px;
        margin-bottom: 20px;
    }

    .removeButton {
        width: 15%;
        float: right;
        margin-right: 10px;
    }
</style>

<div class="table-bordered set-table">
    <input type="hidden" id="LstEducationDetailModel_@(Model.Id)__Id" class="iHidden" name="LstEducationDetailModel[@Model.Id].Id">

    <input type="button" value="remove" class="removeButton btn btn-danger">

    <div class="form-group">
        <label>Course</label>
        <input type='text' class="form-control" id='LstEducationDetailModel_@(Model.Id)__Course' name='LstEducationDetailModel[@Model.Id].Course' />
    </div>

    <div class="form-group">
        <label>University</label>
        <input type='text' class="form-control" id='LstEducationDetailModel_@(Model.Id)__University' name='LstEducationDetailModel[@Model.Id].University' />
    </div>

    <div class="form-group">
        <label>Passed On</label>
        <input type='text' class="form-control datepicker" id='LstEducationDetailModel_@(Model.Id)__PassedOn' name='LstEducationDetailModel[@Model.Id].PassedOn' />
    </div>

    <div class="form-group">
        <label>Grade</label>
        <input type='text' class="form-control" id='LstEducationDetailModel_@(Model.Id)__Grade' name='LstEducationDetailModel[@Model.Id].Grade' />
    </div>


</div>


<script>
    $('.datepicker').datepicker({
        endDate: 'today',
        autoclose: true,
        todayHighlight: true
    });

</script>